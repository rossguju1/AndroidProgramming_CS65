            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/textSwitcher"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </TextSwitcher>
    </ScrollView>

</LinearLayout>